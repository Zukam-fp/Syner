<div style="width: 100%; height: 600px; margin-top: 100px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
  data-action="click->map#onMarkerClick">
</div>
</div>
